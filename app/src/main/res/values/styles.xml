<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--STYLE FRAGMENT MAIN LAYOUT-->
    <style name="MainLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!--STYLE HORIZONTAL LAYOUT-->
    <style name="HorizontalLayoutStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:gravity">center</item>
    </style>

    <!--STYLE ACTION BAR-->
    <style name="ActionBarLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <!--STYLE CENTERED HORIZONTAL LINEAR LAYOUT-->
    <style name="CenteredHorizontalLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <!--STYLE ACTION BAR TEXT VIEW-->
    <style name="ActionBarTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/psychedelic_lotus</item>
        <item name="android:textColor">@color/primary_bg_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowColor">#7E000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--STYLE ACTION BAR-->
    <style name="ActionBarStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--STYLE ACTION BAR BUTTON-->
    <style name="ActionBarButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!--STYLE PRIMARY BUTTON-->
    <style name="PrimaryButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="minHeight">64dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="backgroundTint">@color/primary_bg_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/psychedelic_lotus</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:shadowColor">#BF000000</item>
        <item name="android:shadowDx">8</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">8</item>
    </style>

    <!--STYLE ATTENTION CARD-->
    <style name="AttentionCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/error_bg_light</item>
        <item name="android:layout_margin">24dp</item>
        <item name="cardCornerRadius">32dp</item>
    </style>

    <!--STYLE ATTENTION TEXT-->
    <style name="AttentionTextView" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/merriweathersans_variablefont_wght</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!--STYLE FAB-->
    <style name="FabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/fab_bg</item>
        <item name="backgroundTint">@color/primary_bg_light</item>
        <item name="android:foregroundTint">@color/white</item>
        <item name="android:foregroundTintMode">add</item>
        <item name="android:longClickable">false</item>
        <item name="tint">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="maxImageSize">36dp</item>
    </style>

    <!--STYLE GRATITUDE FAB-->
    <style name="GratitudeFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/fab_bg</item>
        <item name="backgroundTint">@color/primary_c_bg_light</item>
        <item name="android:foregroundTint">@color/primary_c_tx_light</item>
        <item name="android:foregroundTintMode">add</item>
        <item name="android:longClickable">false</item>
        <item name="tint">@color/primary_c_tx_light</item>
        <item name="rippleColor">@color/white</item>
        <item name="maxImageSize">40dp</item>
    </style>

    <!--STYLE NAVIGATION BUTTON-->
    <style name="NavButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <!--STYLE DIALOG THEME-->
    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <!-- Hintergrund des Headers -->
        <item name="colorAccent">@color/surface_c_tx_light</item>
        <!-- AusgewÃ¤hlter Tag -->
        <item name="android:colorControlActivated">@color/surface_c_tx_light</item>
        <!-- Tage des Monats -->
        <item name="android:textColorPrimary">@color/surface_c_tx_light</item>
        <!-- Wochentage -->
        <item name="android:textColorSecondary">@color/surface_c_tx_light</item>
    </style>

    <!--STYLE TEXT INPUT FIELD-->
    <style name="TextInputFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:visibility">visible</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="helperTextTextColor">@color/neutral_c_tx_light</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:background">@drawable/contact_border</item>
    </style>

    <!--STYLE DATE TEXT INPUT FIELD-->
    <style name="DateTextInputFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">160dp</item>
        <item name="android:maxWidth">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:visibility">visible</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="helperTextTextColor">@color/secondary_c_tx_light</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:background">@drawable/contact_border</item>
    </style>

    <!--STYLE RECYCLER VIEW-->
    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>

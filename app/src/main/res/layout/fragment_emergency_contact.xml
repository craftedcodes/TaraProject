<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Data binding section for the layout -->
    </data>

    <!-- Main LinearLayout with the style of MainLayoutStyle -->
    <LinearLayout
        style="@style/MainLayoutStyle"
        tools:context=".ui.EmergencyContactFragment">

        <!-- Action bar section -->
        <LinearLayout
            style="@style/ActionBarStyle"
            android:layout_weight="1">

            <!-- Back button -->
            <ImageButton
                android:id="@+id/back_btn"
                style="@style/ActionBarButtonStyle"
                android:contentDescription="@string/back_button"
                android:src="@drawable/iconarrowback" />

            <!-- Home button with logo -->
            <ImageButton
                android:id="@+id/home_btn_logo"
                style="@style/ActionBarButtonStyle"
                android:contentDescription="@string/tara"
                android:src="@drawable/logo01" />

            <!-- Home button text -->
            <TextView
                android:id="@+id/home_btn_text"
                style="@style/LogoTextViewStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/tara"
                tools:ignore="NestedWeights" />

            <!-- Profile button with logo -->
            <ImageButton
                android:id="@+id/profile_btn_logo"
                style="@style/ActionBarButtonStyle"
                android:contentDescription="@string/tara"
                android:src="@drawable/iconprofile"
                android:visibility="invisible"
                app:tint="@color/neutral_c_tx_light" />

        </LinearLayout>

        <!-- TextView for displaying the emergency contact -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_emergency_contact"
            android:fontFamily="@font/psychedelic_lotus"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginHorizontal="24dp"
            android:layout_weight="1"/>

        <!-- ImageView for displaying the avatar -->
        <ImageView
            android:id="@+id/avatar_iv"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/placeholder"
            android:contentDescription="@string/add_avatar_image" />

        <!-- TextInputLayout for entering the name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_tv"
            style="@style/TextInputFieldStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:helperText="@string/name" />

        <!-- TextInputLayout for entering the phone number -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/number_tv"
            style="@style/TextInputFieldStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:helperText="@string/phone_number" />

        <!-- TextInputLayout for entering the emergency message -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/message_tv"
            style="@style/TextInputFieldStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:helperText="Write here your emergency message"
            android:layout_weight="3"/>

        <!-- LinearLayout for quit and save buttons -->
        <LinearLayout
            style="@style/HorizontalLayoutStyle"
            android:layout_marginBottom="80dp"
            android:layout_weight="1">

            <!-- Quit button -->
            <Button
                android:id="@+id/quit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/merriweathersans_variablefont_wght"
                android:minHeight="54dp"
                android:shadowColor="#61000000"
                android:shadowDx="8"
                android:shadowDy="4"
                android:shadowRadius="8"
                android:text="@string/quit"
                android:textColor="@color/error_bg_light"
                android:textSize="20sp"
                app:strokeColor="@color/error_bg_light"
                app:strokeWidth="1dp"
                tools:ignore="ButtonStyle" />

            <!-- Save button -->
            <Button
                android:id="@+id/save_btn"
                style="@style/PrimaryButtonStyle"
                android:text="@string/save"
                app:icon="@drawable/iconsave"
                app:iconTint="@color/white"
                tools:ignore="InefficientWeight" />

        </LinearLayout>

    </LinearLayout>

</layout>

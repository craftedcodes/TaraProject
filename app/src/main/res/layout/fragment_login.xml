<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        style="@style/MainLayoutStyle"
        tools:context=".ui.LoginFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/tara"
            android:fontFamily="@font/psychedelic_lotus"
            android:textColor="@color/primary_bg_light"
            android:textSize="24sp"
            android:shadowColor="#7E000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="8"
            android:layout_marginVertical="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo01"
            android:layout_marginVertical="32dp"
            android:contentDescription="@string/tara" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/e_mail_tf"
            style="@style/TextInputFieldStyle"
            android:hint="@string/your_mail_address_ym_com"
            app:helperText="@string/e_mail"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_tf"
            style="@style/TextInputFieldStyle"
            app:helperText="@string/password"/>

        <LinearLayout
            style="@style/HorizontalLayoutStyle">

            <Button
                android:id="@+id/quit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="54dp"
                android:layout_margin="8dp"
                android:fontFamily="@font/merriweathersans_variablefont_wght"
                android:text="@string/quit"
                android:textColor="@color/error_bg_light"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/error_bg_light"
                app:strokeWidth="1dp"
                android:textSize="20sp"
                android:shadowColor="#61000000"
                android:shadowRadius="8"
                android:shadowDx="8"
                android:shadowDy="4"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                style="@style/PrimaryButtonStyle" />
        </LinearLayout>



    </LinearLayout>
</layout>

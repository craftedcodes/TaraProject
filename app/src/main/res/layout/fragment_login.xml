<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Data binding section for the layout -->
    </data>

    <!-- Main LinearLayout with the style of MainLayoutStyle -->
    <LinearLayout
        style="@style/MainLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".ui.LoginFragment">

        <!-- TextView for the title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="8dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/psychedelic_lotus"
            android:shadowColor="#7E000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="8"
            android:text="@string/tara"
            android:textAlignment="center"
            android:textColor="@color/primary_bg_light"
            android:textSize="24sp"
            />

        <!-- ImageView for the logo -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="32dp"
            android:layout_weight="3"
            android:scaleType="fitCenter"
            android:contentDescription="@string/tara"
            android:src="@drawable/logo01" />

        <!-- TextInputLayout for the email input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/e_mail_tf"
            style="@style/TextInputFieldStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/your_mail_address_ym_com"
            app:helperText="@string/e_mail" />

        <!-- TextInputLayout for the password input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_tf"
            style="@style/TextInputFieldStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:helperText="@string/password" />

        <!-- LinearLayout for the quit and login buttons -->
        <LinearLayout
            style="@style/HorizontalLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Quit button -->
            <Button
                android:id="@+id/quit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/merriweathersans_variablefont_wght"
                android:minHeight="54dp"
                android:shadowColor="#61000000"
                android:shadowDx="8"
                android:shadowDy="4"
                android:shadowRadius="8"
                android:text="@string/quit"
                android:textColor="@color/error_bg_light"
                android:textSize="20sp"
                app:strokeColor="@color/error_bg_light"
                app:strokeWidth="1dp"
                tools:ignore="ButtonStyle" />

            <!-- Login button -->
            <Button
                android:id="@+id/login_btn"
                style="@style/PrimaryButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login" />
        </LinearLayout>

        <!-- TextView for the forgotten password option -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/merriweathersans_variablefont_wght"
            android:text="@string/password_forgotten"
            android:textAlignment="center"
            android:textColor="@color/neutral_c_tx_light"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        style="@style/MainLayoutStyle"
        tools:context=".ui.LoginFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/tara"
            android:fontFamily="@font/psychedelic_lotus"
            android:textColor="@color/primary_bg_light"
            android:textSize="24sp"
            android:shadowColor="#7E000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="8"
            android:layout_marginVertical="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo01"
            android:layout_marginVertical="32dp"
            android:contentDescription="@string/tara" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/e_mail_tf"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="16dp"
            android:hint="@string/your_mail_address_ym_com"
            android:visibility="visible"
            app:boxStrokeWidth="2dp"
            app:errorEnabled="true"
            app:helperText="@string/e_mail"
            app:helperTextEnabled="true"
            app:helperTextTextAppearance="@style/TextAppearance.AppCompat.Body2"
            app:helperTextTextColor="@color/secondary_c_tx_light"
            app:hintEnabled="true"
            android:singleLine="true"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Body2"
            android:background="@drawable/contact_border"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_tf"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="16dp"
            android:visibility="visible"
            app:errorEnabled="true"
            app:helperText="@string/password"
            app:helperTextEnabled="true"
            app:helperTextTextAppearance="@style/TextAppearance.AppCompat.Body2"
            app:helperTextTextColor="@color/secondary_c_tx_light"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Body2"
            android:background="@drawable/contact_border"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/quit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/merriweathersans_variablefont_wght"
                android:text="@string/quit"
                android:textColor="@color/error_bg_light"
                app:strokeColor="@color/error_bg_light"
                app:strokeWidth="1dp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                style="@style/PrimaryButtonStyle" />
        </LinearLayout>



    </LinearLayout>
</layout>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Data binding section for the layout -->
    </data>

    <!-- Main LinearLayout with the style of MainLayoutStyle -->
    <LinearLayout
        style="@style/MainLayoutStyle"
        android:background="?attr/backgroundColor"
        tools:context=".ui.HomeFragment">

        <!-- TextView for displaying the app name -->
        <TextView
            android:id="@+id/tara_text"
            android:text="@string/tara"
            android:textColor="?attr/colorPrimary"
            style="@style/ActionBarTextViewStyle"
            android:gravity="center"/>

        <!-- RiveAnimationView for displaying animations -->
        <app.rive.runtime.kotlin.RiveAnimationView
            android:id="@+id/rive_animation_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            app:riveResource="@raw/tara_light"
            android:layout_marginVertical="8dp"
            tools:ignore="InefficientWeight" />

        <!-- Login button -->
        <Button
            android:id="@+id/login_navigation_btn"
            style="@style/PrimaryButtonStyle"
            android:text="@string/login"
            android:gravity="center" />

        <!-- TextView for displaying the "No account yet" message -->
        <TextView
            android:id="@+id/no_account_yet_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_account_yet"
            android:textSize="14sp"
            android:fontFamily="@font/merriweathersans_variablefont_wght"
            android:layout_marginVertical="4dp" />

        <!-- TextView for displaying the "Register now" message -->
        <TextView
            android:id="@+id/register_now_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/merriweathersans_variablefont_wght"
            android:textAllCaps="true"
            android:text="@string/register_now"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- MaterialCardView for displaying attention message -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/attention_card"
            style="@style/AttentionCardView">

            <!-- LinearLayout for arranging the attention icon and text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                tools:ignore="UseCompoundDrawables">

                <!-- ImageView for displaying the attention icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/iconexclamation"
                    android:layout_margin="8dp"
                    app:tint="?attr/colorOnError"
                    android:contentDescription="@string/unlock" />

                <!-- TextView for displaying the attention text -->
                <TextView
                    style="@style/AttentionTextView"
                    android:text="@string/unlock"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</layout>

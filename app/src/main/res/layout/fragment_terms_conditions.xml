<?xml version="1.0" encoding="utf-8"?>

<!-- Root layout for the Terms and Conditions Fragment. -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Data binding section -->
    <data>
    </data>

    <!-- Main vertical layout container for the TermsConditionsFragment -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.TermsConditionsFragment">

        <!-- Top action bar containing navigation buttons and app logo -->
        <LinearLayout
            style="@style/ActionBarStyle"
            android:layout_gravity="center">

            <!-- Back button for navigation -->
            <ImageButton
                android:id="@+id/back_btn"
                style="@style/ActionBarButtonStyle"
                android:contentDescription="@string/back_button"
                android:src="@drawable/iconarrowback"
                app:tint="?attr/colorSurfaceContainer"/>

            <!-- App name displayed in the action bar -->
            <TextView
                android:id="@+id/home_btn_text"
                style="@style/LogoTextViewStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/tara"
                tools:ignore="NestedWeights" />

            <!-- Profile button (currently set to invisible) -->
            <ImageButton
                android:id="@+id/profile_btn_logo"
                style="@style/ActionBarButtonStyle"
                android:contentDescription="@string/tara"
                android:src="@drawable/iconprofile"
                android:visibility="invisible"
                app:tint="?attr/colorSurfaceContainer" />

        </LinearLayout>

        <!-- Scrollable view containing the main content of the fragment -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="24dp"
            android:fillViewport="true">

            <!-- Vertical layout containing all the terms and conditions text views -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Main headline for the terms and conditions -->
                <TextView
                    style="@style/HeadlineStyle"
                    android:text="@string/terms_and_conditions_for_tara"
                    />

                <!-- Subheadline for the scope section -->
                <TextView
                    style="@style/SubheadlineStyle"
                    android:text="@string/scope"
                    />

                <!-- Description text for the scope section -->
                <TextView
                    style="@style/StandardTextStyle"
                    android:text="@string/these_terms_and_conditions_apply_to_the_use_of_the_tara_app_published_in_the_google_play_store"
                    />

                <!-- Subheadline for the conclusion of contract section -->
                <TextView
                    style="@style/SubheadlineStyle"
                    android:text="@string/conclusion_of_contract"
                    />

                <!-- Subheadline for the usage rights section -->
                <TextView
                    style="@style/SubheadlineStyle"
                    android:text="@string/usage_rights"
                    />

                <!-- Description text for the usage rights section -->
                <TextView
                    style="@style/StandardTextStyle"
                    android:text="@string/the_app_is_provided_to_the_user_solely_for_private_use_commercial_use_is_prohibited_unless_expressly_permitted"
                    />

                <!-- Subheadline for the disclaimer section -->
                <TextView
                    style="@style/SubheadlineStyle"
                    android:text="@string/disclaimer"
                    />

                <!-- Subheadline for the data protection section -->
                <TextView
                    style="@style/SubheadlineStyle"
                    android:text="@string/data_protection"
                    />

                <!-- Subheadline for the subscription section -->
                <TextView
                    style="@style/SubheadlineStyle"
                    android:text="@string/subscription"
                    />

                <!-- Description text for the subscription section (point a) -->
                <TextView
                    style="@style/StandardTextStyle2"
                    android:text="@string/a_the_app_offers_a_subscription_model_users_can_choose_between_a_monthly_subscription_for_5_99_or_an_annual_subscription_for_50"
                    />

                <!-- Description text for the subscription section (point b) -->
                <TextView
                    style="@style/StandardTextStyle2"
                    android:text="@string/b_the_subscription_automatically_renews_unless_it_is_cancelled_at_least_24_hours_before_the_end_of_the_current_period"
                    />

                <!-- Description text for the subscription section (point c) -->
                <TextView
                    style="@style/StandardTextStyle2"
                    android:text="@string/c_payment_is_processed_through_the_google_play_store_upon_cancellation_of_the_subscription_access_remains_until_the_end_of_the_already_paid_period"
                    />

                <!-- Description text for the subscription section (point d) -->
                <TextView
                    style="@style/StandardTextStyle"
                    android:text="@string/d_refunds_for_already_paid_subscription_fees_are_excluded_unless_required_by_law"
                    />

                <!-- Subheadline for the termination section -->
                <TextView
                    style="@style/SubheadlineStyle"
                    android:text="@string/termination"
                    />

                <!-- Subheadline for the changes to the terms and conditions section -->
                <TextView
                    style="@style/SubheadlineStyle"
                    android:text="@string/changes_to_the_terms_and_conditions"
                    />

                <!-- Subheadline for the final provisions section -->
                <TextView
                    style="@style/SubheadlineStyle"
                    android:text="@string/final_provisions"
                    />

                <!-- Description text for the final provisions section -->
                <TextView
                    style="@style/StandardTextStyle"
                    android:text="@string/should_any_provision_of_these_terms_and_conditions_be_invalid_or_unenforceable_the_validity_of_the_remaining_provisions_shall_remain_unaffected"
                    />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>
